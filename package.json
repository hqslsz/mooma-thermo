{
  "name": "rhythm-memory-game",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.vue",
    "typecheck": "vue-tsc --noEmit",
    "format": "prettier --config config/prettier/.prettierrc.json --ignore-path config/prettier/.prettierignore --write .",
    "format:check": "prettier --config config/prettier/.prettierrc.json --ignore-path config/prettier/.prettierignore --check .",
    "check": "npm run lint && npm run typecheck && npm run format:check"
  },
  "dependencies": {
    "vue": "^3.5.14"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.2.12"
  }
}
